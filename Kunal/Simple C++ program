//program to convert a decimal number into binary

#include <iostream>
using namespace std;

int main(){
  int n;
  int a[10];
  int i=0;
  cout<<"Enter the integer number"<<endl;;
  cin>>n;
  while(n!=0){
  int x = n%2;
  a[i++] = x;
  n=n/2;
}
for(int j=i-1;j>=0;j--){
   cout<<a[j]<<" ";
}
return 0;
}
